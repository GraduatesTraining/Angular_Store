doctype html

html(ng-app="store")

  head
  
    title This is the AngularJS Store
    
    // Load Bootstrap and my style
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet")
    link(href="css/style.css", rel="stylesheet")
    
  body#ini(ng-controller="StoreController as store")
  
    // Head
    h1.text-center The Angular.JS Store
    hr
      
    // Cart
    store-cart
        
    // Filters
    store-filters
      
    // Product list
    ul.list-group.main.mainList
      li(class="list-group-item" ng-repeat="product in store.products | orderBy: store.priceFilter()" ng-hide="product.soldOut")
      
        // Product title
        h3
          product-title
          
        // Image Gallery
        img-gallery
        br
        
        // Product panel
        product-panel
        
        // Add to cart button
        button.btn.btn-primary.btn-lg.btn-block(ng-disabled="!product.canPurchase" ng-click="store.addToCart(product)") Add to Cart
        
    // Load Angular.JS and JS files
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js")
    script(src="js/app.js")
    script(src="js/products.js")
    
    // Load jQuery
    script(src="http://code.jquery.com/jquery-2.2.0.min.js")